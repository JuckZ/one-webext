{
  "name": "one-webext",
  "displayName": "One WebExt",
  "version": "0.0.1",
  "private": true,
  "description": "All in one",
  "homepage": "https://github.com/juckz/one-webext",
  "author": {
    "name": "Juck",
    "email": "juckz@foxmail.com"
  },
  "type": "module",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:devtools": "npm run build:devtools -- --mode development",
    "dev:devtools-page": "npm run build:devtools-page -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:devtools build:devtools-page build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:devtools": "vite build --config vite.config.devtools.ts",
    "build:devtools-page": "vite build --config vite.config.devtools-page.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "echo 'lint-staged'"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^1.1.4",
    "axios": "^1.4.0",
    "element-plus": "^2.1.11",
    "file-saver": "^2.0.5",
    "interactjs": "^1.10.19",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.0",
    "@ffflorian/jszip-cli": "^3.7.1",
    "@iconify/json": "^2.2.239",
    "@interactjs/types": "^1.10.19",
    "@playwright/test": "^1.46.1",
    "@types/chrome": "^0.0.239",
    "@types/file-saver": "^2.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.0",
    "@types/webextension-polyfill": "^0.12.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@unocss/reset": "^0.62.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/compiler-sfc": "^3.4.38",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.0.1",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.9.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vue": "^9.17.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.1",
    "kolorist": "^1.8.0",
    "less": "^4.1.3",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unocss": "^0.62.4",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-element-plus": "^0.7.1",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.9",
    "vitest": "^2.0.5",
    "vue": "^3.4.38",
    "vue-demi": "^0.14.10",
    "vue-eslint-parser": "^9.3.2",
    "web-ext": "^8.2.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  },
  "packageManager": "pnpm@9.1.4"
}
